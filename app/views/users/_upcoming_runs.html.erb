<div class="container upcoming-runs-table">
  <div class="row">
    <div class="col s12">
      <h3 class='center'> Upcoming Runs: </h3>
      <% if @upcoming_runs.any? %>
      <table class='responsive-table highlight bordered'>
        <tr>
          <th>Run Date</th>
          <th>Location</th>
          <th>Desired Distance</th>
          <th>Companion</th>
        </tr>
        <% @upcoming_runs.each do |run| %>
        <tr class='clickable-row' id='<%= run.id %>'>
          <td><%= run.run_date %></td>
          <td><%= run.zipcode %></td>
          <td><%=run.desired_distance %></td>
          <% if run.companion %>
            <% if run.runner_id == current_user.id %>
              <td ><%= link_to "#{run.companion.name}", user_profile_path(run.companion_id, run.companion.profile.id) %></td>
            <% elsif run.companion_id == current_user.id %>
              <td><%= link_to "#{run.runner.name}", user_profile_path(run.runner_id, run.runner.profile.id)%></td>
            <% end %>
          <% else %>
            <td> Still Searching </td>
          <% end %>
        <% end %>
      </table>
    </div>
    </div>
  </div>
  <% else %>
    <p> You haven't planned any runs yet! Start a search or create a run to start planning! </p>
  <% end %>
</div>
