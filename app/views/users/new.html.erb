<div class="container" id="new-user-form">
  <div class="row">
  <div class="col s10">
    <h1>Create an Account</h1>
    <%= form_for @user do |f| %>
    <div class="row">
      <div class="col s10">
    <%= render partial: 'application/errors', layout: false, locals: { errors: @errors } %>
      </div>
    </div>
    <div class="row">
      <div class="col s10">
      Name: <%= f.text_field :name, placeholder:"My friends call me..." %>
      </div>
    </div>
    <div class="row">
      <div class="col s5">
        Email: <%= f.text_field :email, placeholder: "Contact me at..."%>
      </div>
      <div class="col s5">
        Zip Code: <%= f.number_field :zipcode, placeholder: "Where I run..."%>
      </div>
    </div>
    <div class="row">
      <div class="col s5">
        Password: <%= f.password_field :password, placeholder: "Password" %>
      </div>
      <div class="col s5">
        Confirm Password: <%= f.password_field :password_confirmation, placeholder: "One more time..." %>
      </div>
    </div>
    <div class="row sign-up-btn-create-account">
      <div class="col s5" id="create-account-btn">
        <%= f.submit "Sign Up", :class => "waves-effect waves-light btn #00acc1 cyan darken-1" %>
      </div>
    </div>
    <% end %>

      <p class="returning-user-link"> Already have an account? <%= link_to "Login here!", new_session_path%></p>
    </div>
  </div>
</div>
