<div class="profile-show container center">
  <div class="row center">
    <div class="col s6 m6 l6 profile-pic-div">
      <%= image_tag @profile.avatar.url(:medium), class: "circle responsive-image profile-pic-show-view" %>
    </div>
  </div>
  <div class = "container">
    <div class="row">
      <div class="col s6 m6 l6">
        <h2><%=@profile.user.name%>'s Profile </h2>
        <% if current_user == @profile.user %>
          <p>Email Address: <%=@profile.user.email%></p>
          <p>Location: <%=@location%></p>
        <% end %>
        <p>Why I Run: <%=@profile.why_i_run%></p>
        <p>Goals: <%=@profile.goals%></p>
        <p>Experience Level: <%=@profile.experience%></p>
        <p>Need To Knows: <%=@profile.need_to_knows%></p>
      </div>
    </div>
  </div>
</div>
