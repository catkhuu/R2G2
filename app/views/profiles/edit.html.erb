<div class="container create-profile-form">
  <div class="row">
  <div class="col s10">
  <h2> Edit Your Profile: </h2>
  <%= form_for :profile, url: user_profile_path(@profile.user_id, @profile), method: 'put' do |f| %>
    <div class="row">
      <div class="col s10">
        Why I Run: <%= f.text_field :why_i_run%>
      </div>
    </div>
    <div class="row">
      <div class="col s10">
        Goals: <%= f.text_field :goals%>
      </div>
    </div>
    <div class="row">
      <div class="col s5">
        Experience Level:
        <%= f.select :experience, ['Beginner', 'Intermediate', 'Advanced', 'Competitive'] %>
      </div>
      <div class="col s5">
        <div class="file-field input-field">
          <div class="btn">
            <span>Browse</span>
            <input type="file" name="profile[avatar]" >
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" type="text" placeholder="Upload Profile Picture">
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col s10">
        Need To Knows: <%= f.text_field :need_to_knows%>
      </div>
    </div>
    <div class="row update-profile-btn">
      <div class="col s5" id="update-profile-btn">
        <%= f.submit "Update Profile", :class => "waves-effect waves-light btn #00acc1 cyan darken-1" %>
      </div>
    </div>
  <% end %>
  </div>
  </div>
</div>
